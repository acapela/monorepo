{
  "name": "@acapela/backend",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "test": "jest src --runInBand",
    "test:watch": "jest src --runInBand --watch",
    "build": "rimraf dist && ncc build src/index.ts -o dist/index.js --source-map",
    "start": "node dist",
    "dev": "ts-node-dev --transpile-only ./src/index.ts",
    "format": "prettier --write src",
    "lint": "eslint \"src/**/*.{js,ts}\"",
    "checkformat": "prettier --check src",
    "gcp-build": "NODE_ENV=production npm run build"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "npm run format"
    ]
  },
  "peerDependencies": {
    "express": "*",
    "axios": "*",
    "graphql": "*",
    "graphql-request": "*",
    "knex": "*",
    "lodash": "*",
    "pg": "*",
    "uuid": "*",
    "typescript": "*"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.15.2",
    "@typescript-eslint/parser": "^4.15.2",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^8.0.0",
    "lint-staged": "^10.5.4",
    "pino-pretty": "^4.5.0",
    "supertest": "^6.1.3",
    "@types/jest": "*",
    "tsc-watch": "*",
    "ts-node-dev": "*",
    "@vercel/ncc": "*"
  },
  "dependencies": {
    "@godaddy/terminus": "^4.6.0",
    "@google-cloud/secret-manager": "^3.4.0",
    "@sendgrid/mail": "^7.4.2",
    "deepmerge": "^4.2.2",
    "express-async-errors": "^3.1.1",
    "firebase-admin": "^9.5.0",
    "hasura-cli": "^1.3.3",
    "helmet": "^4.4.1",
    "js-yaml": "^4.0.0",
    "pino": "^6.11.1",
    "@acapela/config": "0.1.0"
  }
}
