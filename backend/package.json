{
  "name": "@acapela/backend",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "test": "jest src --runInBand",
    "test:watch": "jest src --runInBand --watch",
    "build": "rimraf dist && ncc build src/index.ts -o dist/ --source-map",
    "start": "npm run hasura:migrate && berglas exec -- node dist",
    "dev": "ts-node-dev --transpile-only ./src/index.ts",
    "gcp-build": "NODE_ENV=production npm run build",
    "hasura:migrate": "berglas exec -- ./scripts/migrate-hasura.sh"
  },
  "peerDependencies": {
    "express": "*",
    "axios": "*",
    "graphql": "*",
    "graphql-request": "*",
    "knex": "*",
    "lodash": "*",
    "pg": "*",
    "uuid": "*",
    "typescript": "*"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.15.2",
    "@typescript-eslint/parser": "^4.15.2",
    "pino-pretty": "^4.5.0",
    "supertest": "^6.1.3",
    "@types/jest": "*",
    "tsc-watch": "*",
    "ts-node-dev": "*",
    "@vercel/ncc": "*"
  },
  "dependencies": {
    "@godaddy/terminus": "^4.6.0",
    "@google-cloud/secret-manager": "^3.4.0",
    "deepmerge": "^4.2.2",
    "express-async-errors": "^3.1.1",
    "hasura-cli": "*",
    "helmet": "^4.4.1",
    "js-yaml": "^4.0.0",
    "pino": "^6.11.1",
    "@acapela/config": "0.1.0"
  }
}
