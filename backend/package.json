{
  "name": "@acapela/backend",
  "private": "true",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "test": "jest src --runInBand",
    "test:watch": "jest src --runInBand --watch",
    "build": "rimraf dist && ncc build src/index.ts -o dist/ --source-map",
    "start": "npm run hasura:migrate && berglas exec -- node dist",
    "dev": "ts-node-dev --transpile-only --inspect=9230 -- ./src/index.ts",
    "gcp-build": "NODE_ENV=production npm run build",
    "hasura:migrate": "berglas exec -- ./scripts/migrate-hasura.sh"
  },
  "peerDependencies": {
    "axios": "*",
    "express": "*",
    "typescript": "*"
  },
  "dependencies": {
    "@acapela/config": "0.1.0",
    "@godaddy/terminus": "^4.7.1",
    "@google-cloud/secret-manager": "^3.5.0",
    "express-async-errors": "^3.1.1",
    "hasura-cli": "^1.4.0-alpha.2",
    "helmet": "^4.4.1",
    "pg": "^8.5.1",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/express": "*",
    "@types/jest": "*",
    "@types/supertest": "^2.0.10",
    "@types/uuid": "^8.3.0",
    "@vercel/ncc": "^0.27.0",
    "jest": "*",
    "pino-pretty": "^4.7.1",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.4",
    "ts-node-dev": "^1.1.6",
    "tsc-watch": "^4.2.9"
  }
}
