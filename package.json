{
  "name": "@acapela/root",
  "private": true,
  "version": "0.1.0",
  "workspaces": {
    "packages": [
      "frontend",
      "backend"
    ]
  },
  "scripts": {
    "frontned:dev": "npm run frontend -- run dev",
    "frontned:test": "npm run frontend -- run test",
    "frontned:test:watch": "npm run frontend -- run test:watch",
    "backend:dev": "npm run backend -- run dev",
    "backend:test": "npm run backend -- run test",
    "backend:test:watch": "npm run backend -- run test:watch",
    "docker:up:detach": "npm run docker:up -- -d",
    "docker:up": "docker-compose -f ./infrastructure/docker-compose.yaml up",
    "docker:stop": "docker-compose -f ./infrastructure/docker-compose.yaml stop",
    "frontend": "cd frontend && npm --",
    "backend": "cd frontend && npm --",
    "start": "ntl --descriptions --autocomplete --no-rerun-cache --size 20 --exclude start frontend backend",
    "hasura:console": "hasura console --project infrastructure/hasura --admin-secret dev"
  },
  "ntl": {
    "descriptions": {
      "frontned:dev": "Start frontend dev server",
      "backend:dev": "Start backend dev server",
      "docker:up:detach": "Start docker infrastructure in detached mode",
      "docker:up": "Start docker infrastructure in interactive mode",
      "docker:stop": "Stop docker infrastructure",
      "hasura:console": "Start hasura dev console"
    }
  },
  "dependencies": {
    "axios": "^0.21.1",
    "date-fns": "^2.17.0",
    "express": "^4.17.1",
    "graphql": "^15.5.0",
    "graphql-request": "^3.4.0",
    "hasura-cli": "^1.3.3",
    "knex": "^0.21.18",
    "lodash": "^4.17.21",
    "pg": "^8.5.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "typescript": "^4.1.5",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.20",
    "@types/js-yaml": "^4.0.0",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/lodash": "^4.14.168",
    "@types/next-auth": "^3.1.24",
    "@types/node": "^14.14.31",
    "@types/pino": "^6.3.6",
    "@types/pino-http": "^5.4.0",
    "@types/react": "^17.0.2",
    "@types/supertest": "^2.0.10",
    "@types/uuid": "^8.3.0",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^8.0.0",
    "husky": "^5.1.1",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "ntl": "^5.1.0",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.1",
    "tsc-watch": "^4.2.9"
  }
}
