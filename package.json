{
  "name": "~root",
  "private": true,
  "version": "0.1.0",
  "license": "UNLICENSED",
  "engines": {
    "yarn": "^1.22.0"
  },
  "workspaces": {
    "packages": [
      "frontend",
      "backend",
      "config",
      "ui",
      "shared",
      "db",
      "tooling",
      "richEditor",
      "gql"
    ]
  },
  "scripts": {
    "code": "code acapela.code-workspace",
    "unstable:scope": "func() { ( npm \"$2\" --prefix \"$1\" --save --package-lock-only --no-package-lock \"$3\" ; ) && npm i;}; func",
    "frontend:dev": "yarn frontend dev",
    "frontend:test": "yarn frontend test",
    "frontend:test:watch": "yarn frontend test:watch",
    "frontend:build": "yarn frontend next:build",
    "backend:dev": "yarn backend dev",
    "backend:test": "yarn backend test",
    "backend:test:watch": "yarn backend test:watch",
    "docker:up:detach": "yarn docker:up -d",
    "docker:up": "docker-compose --env-file .env up --force-recreate",
    "docker:config": "docker-compose --env-file .env config",
    "docker:stop": "docker-compose stop",
    "docker:down": "docker-compose down -v",
    "frontend": "yarn workspace ~frontend",
    "backend": "yarn workspace ~backend",
    "ui": "yarn workspace ~ui",
    "db": "yarn workspace ~db",
    "richEditor": "yarn workspace ~richEditor",
    "shared": "yarn workspace ~shared",
    "start": "ntl --descriptions --autocomplete --no-rerun-cache --size 20 --exclude start frontend backend",
    "hasura:migrations": "hasura migrate apply --project infrastructure/hasura --admin-secret dev",
    "hasura:migrations:squash": "func(){ hasura migrate squash --name \"$1\" --from \"$2\" --project infrastructure/hasura --admin-secret dev; }; func",
    "hasura:migrations:mark-as-applied": "func(){ hasura migrate apply --version \"$1\" --skip-execution --project infrastructure/hasura --admin-secret dev; }; func",
    "hasura:seeds": "func(){ hasura seed apply --project infrastructure/hasura --admin-secret dev; }; func",
    "hasura:seeds:create": "func(){ hasura seed create \"$1\" --project infrastructure/hasura --admin-secret dev; }; func",
    "hasura:meta": "hasura metadata apply --project infrastructure/hasura --admin-secret dev",
    "hasura:console": "hasura console --project infrastructure/hasura --admin-secret dev",
    "hasura:update": "yarn hasura:migrations && yarn hasura:seeds && yarn hasura:meta",
    "frontend:gql-types": "tooling gql frontend --watch",
    "lint": "eslint . && prettier --check .",
    "test": "yarn frontend:test && yarn backend:test",
    "format": "eslint --fix . && prettier --write .",
    "prepare": "husky install",
    "start:backend": "yarn backend start",
    "start:frontend": "yarn frontend start",
    "build": "yarn frontend:build",
    "generate": "yarn workspace ~db generate && yarn workspace ~gql generate"
  },
  "lint-staged": {
    "*.{md,yaml,yml,graphql,json}": "prettier --write",
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "ntl": {
    "descriptions": {
      "frontend:dev": "Start frontend dev server",
      "frontend:gql-types": "Generate graphql types for frontend",
      "backend:dev": "Start backend dev server",
      "docker:up:detach": "Start docker infrastructure in detached mode",
      "docker:up": "Start docker infrastructure in interactive mode",
      "docker:stop": "Stop docker infrastructure",
      "hasura:console": "Start hasura dev console"
    }
  },
  "dependencies": {
    "axios": "^0.21.1",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "hasura-cli": "^2.0.1",
    "husky": "^7.0.1",
    "mobx": "^6.3.2",
    "mobx-react": "^7.2.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-use": "^17.2.4",
    "styled-components": "^5.3.0",
    "ts-node": "^10.1.0",
    "typescript": "^4.3.5",
    "utility-types": "^3.10.0",
    "~tooling": "0.1.0"
  },
  "resolutions": {
    "react": "17.0.2",
    "tslib": "2.2.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/jest": "^26.0.24",
    "@types/lodash": "^4.14.171",
    "@types/node": "^16.3.1",
    "@types/react": "^17.0.14",
    "@types/react-dom": "^17.0.9",
    "@types/styled-components": "^5.1.11",
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "@typescript-eslint/parser": "^4.28.2",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.30.0",
    "eslint-config-prettier": "^8.3.0",
    "jest": "^27.0.6",
    "lint-staged": "^11.0.0",
    "ntl": "^5.1.0",
    "prettier": "^2.3.2",
    "tslib": "^2.3.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
