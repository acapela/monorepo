{
  "name": "@aca/desktop",
  "version": "0.1.0",
  "description": "Acapela makes async work more actionable by aggregating and triaging notifications from multiple tools.",
  "license": "UNLICENSED",
  "author": "Acapela GmbH",
  "repository": "https://github.com/weareacapela/release",
  "peerDependencies": {
    "react": "*",
    "styled-components": "*"
  },
  "scripts": {
    "dev": "ts-node dev.ts",
    "build:bundle": "ts-node build.ts",
    "build:electron": "electron-builder build --dir",
    "build": "yarn build:bundle && yarn build:electron",
    "build-and-publish": "electron-builder build -p always --mac dmg"
  },
  "source": ".",
  "dependencies": {
    "@parcel/config-default": "^2.1.1",
    "@parcel/core": "^2.1.1",
    "@types/node-cleanup": "^2.1.2",
    "electron-is-dev": "^2.0.0",
    "electron-json-storage": "^4.5.0",
    "electron-updater": "^4.6.1",
    "node-cleanup": "^2.1.2",
    "react-chicane": "^0.6.1",
    "url-pattern": "^1.0.3"
  },
  "devDependencies": {
    "@types/electron-json-storage": "^4.5.0",
    "electron": "16.0.6",
    "electron-builder": "^22.14.5",
    "electron-notarize": "^1.1.1",
    "parcel": "^2.1.1",
    "ts-node": "^10.4.0"
  },
  "main": "./dist/electron/index.js",
  "build": {
    "productName": "Acapela",
    "appId": "com.desktop.acapela",
    "files": [
      "!node_modules/**/*",
      "dist"
    ],
    "publish": [
      {
        "provider": "github",
        "private": false,
        "releaseType": "release"
      }
    ],
    "directories": {
      "output": "dist-electron"
    },
    "afterSign": "./scripts/notarize.js",
    "mac": {
      "category": "public.app-category.productivity",
      "hardenedRuntime": true,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "dmg": {
      "sign": false
    }
  }
}
