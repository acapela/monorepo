{
  "name": "@acapela/db",
  "private": "true",
  "version": "0.1.0",
  "scripts": {
    "setup": "dotenv -e ../.env -- bash -c 'echo \"PRISMA_DATABASE_URL=postgresql://$DB_USER:$DB_PASSWORD@$DB_HOST:$DB_PORT/$DB_NAME?schema=public\" > .env'",
    "introspect": "npm run setup && prisma introspect",
    "validate": "npm run setup && prisma validate",
    "generate": "npm run setup && prisma generate",
    "update": "npm run introspect && npm run generate",
    "postinstall": "npm run generate"
  },
  "devDependencies": {
    "dotenv-cli": "^4.0.0",
    "prisma": "^2.17.0"
  },
  "dependencies": {
    "@acapela/config": "0.1.0",
    "@acapela/shared": "0.1.0",
    "@prisma/client": "^2.17.0"
  }
}
