{
  "name": "@acapela/db",
  "private": "true",
  "version": "0.1.0",
  "scripts": {
    "dbenv": "dotenv -e ../.env",
    "introspect": "npm run dbenv prisma introspect",
    "validate": "npm run dbenv prisma validate",
    "generate": "npm run dbenv prisma generate",
    "update": "npm run introspect && npm run generate",
    "postinstall": "npm run generate"
  },
  "devDependencies": {
    "cross-env": "7.0.3",
    "dotenv-cli": "^4.0.0",
    "prisma": "^2.17.0"
  },
  "dependencies": {
    "@acapela/config": "0.1.0",
    "@acapela/shared": "0.1.0",
    "@prisma/client": "^2.17.0"
  }
}
